{
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/refs/heads/master/packages/nx/schemas/project-schema.json",
  "targetDefaults": {
    "typecheck": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "test:no-parallel": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "build:gradle-plugin": {
      "cache": true,
      "inputs": [
        "{projectRoot}/gradle-plugin/src/**",
        "{projectRoot}/gradle-plugin/build.gradle.kts",
        "{projectRoot}/gradle-plugin/settings.gradle.kts",
        "{projectRoot}/gradle-plugin/gradle.properties",
        "{projectRoot}/gradle-plugin/gradle/libs.versions.toml"
      ],
      "outputs": [
        "{projectRoot}/gradle-plugin/build/libs"
      ]
    },
    "test:gradle-plugin": {
      "cache": true,
      "inputs": [
        "{projectRoot}/gradle-plugin/src/**",
        "{projectRoot}/gradle-plugin/build.gradle.kts"
      ],
      "dependsOn": [
        "build:gradle-plugin"
      ]
    }
  },
  "defaultBase": "main",
  "neverConnectToCloud": true
}
