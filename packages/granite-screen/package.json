{
  "name": "@granite-js/screen",
  "type": "module",
  "version": "1.0.1",
  "description": "Brownfield Screen for React Native",
  "files": [
    "dist",
    "src",
    "ios",
    "android",
    "gradle-plugin",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*",
    "GraniteScreen.podspec",
    "package.json"
  ],
  "scripts": {
    "build": "cd gradle-plugin && ./gradlew jar",
    "test:gradle-plugin": "cd gradle-plugin && ./gradlew test",
    "prepack": "cd gradle-plugin && ./gradlew jar"
  },
  "nx": {
    "targets": {
      "build": {
        "inputs": [
          "{projectRoot}/gradle-plugin/src/**",
          "{projectRoot}/gradle-plugin/build.gradle.kts",
          "{projectRoot}/gradle-plugin/settings.gradle.kts",
          "{projectRoot}/gradle-plugin/gradle.properties",
          "{projectRoot}/gradle-plugin/gradle/libs.versions.toml"
        ],
        "outputs": [
          "{projectRoot}/gradle-plugin/build/libs"
        ]
      }
    }
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toss/granite.git",
    "directory": "packages/granite-screen"
  }
}
