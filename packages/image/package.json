{
  "name": "@granite-js/image",
  "version": "0.1.34-next.0",
  "description": "A pluggable React Native image component that lets you use your existing native image loading infrastructure",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace @granite-js/image-example",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "bob build",
    "prepack": "bob build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "react-native",
    "image",
    "fast-image",
    "ios",
    "android",
    "brownfield",
    "kingfisher",
    "glide",
    "coil",
    "sdwebimage"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toss/granite.git",
    "directory": "packages/image"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/react": "catalog:react-native",
    "del-cli": "^6.0.0",
    "eslint": "^9.7.0",
    "react": "catalog:react-native",
    "react-native": "catalog:react-native",
    "react-native-builder-bob": "^0.40.16",
    "typescript": "5.8.3"
  },
  "peerDependencies": {
    "@granite-js/native": "*",
    "react": "*",
    "react-native": "*"
  },
  "peerDependenciesMeta": {
    "@granite-js/native": {
      "optional": true
    }
  },
  "dependencies": {
    "react-simplikit": "^0.0.40"
  },
  "workspaces": [
    "example"
  ],
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "GraniteImageSpec",
    "type": "components",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.facebook.react.viewmanagers"
    },
    "ios": {
      "componentProvider": {
        "GraniteImage": "GraniteImageComponentView"
      }
    }
  },
  "sideEffects": false
}
