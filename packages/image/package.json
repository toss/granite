{
  "name": "@granite-js/image",
  "version": "0.1.34-next.0",
  "description": "A pluggable React Native image component that lets you use your existing native image loading infrastructure",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "android",
    "ios",
    "*.podspec",
    "react-native.config.js"
  ],
  "scripts": {
    "example": "yarn workspace @granite-js/image-example",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "react-native",
    "image",
    "fast-image",
    "ios",
    "android",
    "brownfield",
    "kingfisher",
    "glide",
    "coil",
    "sdwebimage"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toss/granite.git",
    "directory": "packages/image"
  },
  "author": "Toss <platform@toss.im>",
  "homepage": "https://github.com/toss/granite/tree/main/packages/image#readme",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "catalog:react-native",
    "del-cli": "^6.0.0",
    "eslint": "^9.7.0",
    "react": "catalog:react-native",
    "react-native": "catalog:react-native",
    "typescript": "5.8.3"
  },
  "peerDependencies": {
    "@granite-js/native": "*",
    "react": "*",
    "react-native": "*"
  },
  "peerDependenciesMeta": {
    "@granite-js/native": {
      "optional": true
    }
  },
  "dependencies": {
    "react-simplikit": "^0.0.40"
  },
  "codegenConfig": {
    "name": "GraniteImageSpec",
    "type": "components",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.facebook.react.viewmanagers"
    },
    "ios": {
      "componentProvider": {
        "GraniteImage": "GraniteImageComponentView"
      }
    }
  },
  "sideEffects": false
}
