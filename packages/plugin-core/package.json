{
  "name": "@granite-js/plugin-core",
  "type": "module",
  "version": "0.1.0",
  "description": "The core plugin module for Granite",
  "scripts": {
    "prepack": "yarn build",
    "typecheck": "tsc --noEmit",
    "build": "tsdown"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@granite-js/mpack": "workspace:*",
    "@types/connect": "^3",
    "connect": "^3.7.0",
    "es-toolkit": "^1.34.1",
    "esbuild": "^0.25.4",
    "tsdown": "^0.11.12",
    "typescript": "^5.6.3",
    "vitest": "^3.0.9"
  },
  "dependencies": {
    "zod": "3.24.4"
  },
  "sideEffects": false
}
