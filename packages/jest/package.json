{
  "name": "@granite-js/jest",
  "version": "1.0.0",
  "description": "Jest presets for Granite",
  "scripts": {
    "prepack": "yarn build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "build": "tsup"
  },
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toss/granite.git",
    "directory": "packages/jest"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "jest": "^29.7.0"
  },
  "devDependencies": {
    "@granite-js/native": "workspace:*",
    "@types/jest": "^29.5.12",
    "@types/node": "catalog:tools",
    "eslint": "^9.7.0",
    "tsup": "^8.5.0",
    "typescript": "catalog:tools"
  },
  "peerDependencies": {
    "@granite-js/native": "workspace:*",
    "react": "*",
    "react-native": "*"
  },
  "sideEffects": false
}
