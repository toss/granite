{
  "name": "@granite-js/video",
  "version": "0.1.34-next.0",
  "description": "Pluggable video component for React Native with provider selection",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "*.podspec",
    "react-native.config.js",
    "!example/**",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace @granite-js/video-example",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "video",
    "player",
    "exoplayer",
    "avplayer",
    "vlc",
    "streaming",
    "hls",
    "dash",
    "drm",
    "pluggable",
    "provider"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toss/granite.git",
    "directory": "packages/video"
  },
  "author": "Toss <platform@toss.im>",
  "homepage": "https://github.com/toss/granite/tree/main/packages/video#readme",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "catalog:react-native",
    "del-cli": "^6.0.0",
    "eslint": "^9.7.0",
    "react": "catalog:react-native",
    "react-native": "catalog:react-native",
    "typescript": "5.8.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "codegenConfig": {
    "name": "GraniteVideoViewSpec",
    "type": "all",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.anthropic.reactnativegranitevideo"
    },
    "ios": {
      "componentProvider": {
        "GraniteVideoView": "GraniteVideoView"
      }
    }
  },
  "sideEffects": false
}
